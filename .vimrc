syntax on
" no auto indent
set noai
" disable auto comment indent
set formatoptions-=cro
" always show mode
set showmode
" always show matching parens
set showmatch
" ignore case if search is all lower case
set smartcase
" highlight search terms
" set hlsearch
" show search matches as you type
set incsearch
" command and search history
set history=10000
" undo deapth
set undolevels=1000
" always show ruler
set ruler
" Set path for recursive search
set path=.,/usr/include,,**
" Set all tab characters to 2 spaces
set tabstop=2 shiftwidth=2 expandtab
" Add line numbers
:set nu
