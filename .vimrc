syntax on
set noai
set formatoptions-=cro
set showmode
set showmatch
set smartcase
set incsearch
set history=10000
set undolevels=1000
set ruler
set path=.,/usr/include,,**
set tabstop=2 shiftwidth=2
set nu

" block arrow keys
noremap <up> <nop>
noremap <down> <nop>
noremap <left> <nop>
noremap <right> <nop>

nnoremap j gj
nnoremap k gk

" disable octal interpretation
set nrformats=
