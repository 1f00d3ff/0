syntax on
set noai
set formatoptions-=cro
set showmode
set showmatch
set smartcase
set incsearch
set history=10000
set undolevels=1000
set ruler
set path=.,/usr/include,,**
set tabstop=2 shiftwidth=2 expandtab
set nu
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>
nnoremap j gj
nnoremap k gk
